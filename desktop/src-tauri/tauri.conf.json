{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.contextcache.desktop",
  "productName": "Context Cache",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ui",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Context Cache",
        "width": 1100,
        "height": 720,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/tray.png"
    ]
  }
}
